<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-color: #CCFFFF;">

    <!-- Campo per l'indirizzo del destinatario -->
    <TextField fx:id="recipientField" promptText="A"
               layoutX="10" layoutY="10" prefWidth="580" prefHeight="30" />

    <!-- Campo per Cc -->
    <TextField fx:id="ccField" promptText="Cc"
               layoutX="10" layoutY="50" prefWidth="285" prefHeight="30" />

    <!-- Campo per Ccn -->
    <TextField fx:id="bccField" promptText="Ccn"
               layoutX="305" layoutY="50" prefWidth="285" prefHeight="30" />

    <!-- Campo per l'oggetto -->
    <TextField fx:id="subjectField" promptText="Oggetto"
               layoutX="10" layoutY="90" prefWidth="580" prefHeight="30" />

    <!-- Area per il corpo del messaggio -->
    <TextArea fx:id="messageBody" promptText="Scrivi il tuo messaggio qui..."
              layoutX="10" layoutY="130" prefWidth="580" prefHeight="300" />

    <!-- Pulsante "Invia" -->
    <Button fx:id="sendButton" text="Invia"
            layoutX="400" layoutY="450" prefWidth="90" prefHeight="30"
            style="-fx-background-color: #00796b; -fx-text-fill: white;" />

    <!-- Pulsante "Allega" -->
    <Button fx:id="attachButton" text="Allega"
            layoutX="500" layoutY="450" prefWidth="90" prefHeight="30"
            style="-fx-background-color: #00796b; -fx-text-fill: white;" />

</AnchorPane>
