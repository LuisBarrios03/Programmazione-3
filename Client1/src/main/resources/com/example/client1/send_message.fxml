<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="494.0" prefWidth="603.0" style="-fx-background-color: #CCFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Campo per l'indirizzo del destinatario -->
    <TextField fx:id="recipientField" layoutX="10" layoutY="10" prefHeight="30" prefWidth="580" promptText="A" />

    <!-- Campo per Cc -->
    <TextField fx:id="ccField" layoutX="10" layoutY="50" prefHeight="30" prefWidth="285" promptText="Cc" />

    <!-- Campo per Ccn -->
    <TextField fx:id="bccField" layoutX="305" layoutY="50" prefHeight="30" prefWidth="285" promptText="Ccn" />

    <!-- Campo per l'oggetto -->
    <TextField fx:id="subjectField" layoutX="10" layoutY="90" prefHeight="30" prefWidth="580" promptText="Oggetto" />

    <!-- Area per il corpo del messaggio -->
    <TextArea fx:id="messageBody" layoutX="10" layoutY="130" prefHeight="300" prefWidth="580.0" promptText="Scrivi il tuo messaggio qui..." />

    <!-- Pulsante "Invia" -->
    <Button fx:id="sendButton" layoutX="498.0" layoutY="449.0" prefHeight="30" prefWidth="90" style="-fx-background-color: #00796b; -fx-text-fill: white;" text="Invia" />

</AnchorPane>
