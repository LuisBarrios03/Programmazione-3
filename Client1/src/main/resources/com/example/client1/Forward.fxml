<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: CCFFFF;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.client1.Controllers.ForwardEmailController">
    <top>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Inoltra Email" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 10px;">
            <TextField fx:id="emailInput" promptText="Inserisci email..." />
            <ListView fx:id="emailList" prefHeight="200" />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10" style="-fx-padding: 10px; -fx-background-color: CCFFFF;">
            <Button text="Invia" />
        </HBox>
    </bottom>
</BorderPane>
