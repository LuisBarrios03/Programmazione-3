<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="pane_login" prefHeight="251.0" prefWidth="300.0"
            style="-fx-background-color: CCFFFF; -fx-border-width: 2;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.client1.Controllers.LoginController">
   <children>
      <Label id="lbl_benvenuto" layoutX="41.0" layoutY="32.0"
             style="-fx-text-fill: #00796b;" text="Benvenuto/a"
             textAlignment="CENTER">
         <font>
            <Font name="Arial Bold" size="36.0" />
         </font>
      </Label>
      <Label fx:id="email_incorrect" alignment="CENTER" layoutX="41.0"
             layoutY="78.0" prefHeight="18.0" prefWidth="213.0"
             text="Email non registrata oppure scritta in modo errato"
             textAlignment="CENTER" textFill="RED" visible="false" />
      <TextField fx:id="txt_email" layoutX="60.0" layoutY="110.0"
                 prefHeight="35.0" prefWidth="180.0" promptText="Inserisci la tua email"
                 style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #80cbc4; -fx-padding: 5;" />
      <Button fx:id="btn_invia" layoutX="102.0" layoutY="158.0" mnemonicParsing="false"
              onAction="#init" prefHeight="35.0" prefWidth="95.0"
              style="-fx-background-color: #00796b; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;"
              text="Invia">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
